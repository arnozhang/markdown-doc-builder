{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./lib",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": [
        "src"
    ]
}
